@model desarrolloPrivadoEmanuel.Models.Empleado
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImprimirVenta</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
        }

        body {
            font-family: Arial, Helvetica, sans-serif
        }

        p.title {
            font-weight: bold;
        }

        p.title2 {
            font-weight: bold;
            color: #0F2949;
            font-size: 20px;
        }

        p.text {
            font-size: 15px;
            font-weight: 100;
            color: #858585;
        }

        p {
            margin: 0px
        }

        .tbth {
            text-align: left;
        }

        table.tbproductos {
            border-collapse: separate;
            border-spacing: 4px;
        }

            table.tbproductos thead tr th {
                background-color: #0F2949;
                padding: 10px;
                font-size: 15px;
                color: white;
            }

            table.tbproductos tbody tr td {
                padding: 10px;
            }

        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }

        .item-2 {
            font-size: 15px;
            font-weight: bold;
            color: #757575;
        }

        .item-3 {
            font-size: 15px;
            font-weight: bold;
            background-color: #0F2949;
            color: white;
        }

        .td-item {
            border-bottom: 2px solid #E8E8E8 !important;
        }
    </style>
</head>
<body>

    <div class="contenedor">
        <p style="text-align:center;" class="title2">REPORTE</p>
        <table style="width:100%">
            <tr>
                <td>
                    <img src="~/imagenes/Rouses.png" style="width: 250px;" />
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr><td><p class="title2">REPORTE</p></td></tr>
                        <tr><td>R00000</td></tr>
                        <tr><td></td></tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <p style="text-align:center;" class="title">Reporte de usuario @Model.NombreEmpleado</p>
        <br />

        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth">#</th>
                    <th class="tbth">Nombre Empresa</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int? contador = 0;
                }
                @{
                    foreach (var item in Model.Contratos)
                    {
                        contador++;
                        <tr>
                            <td class="td-item"><p class="item">@contador</p></td>
                            <td class="td-item"><p class="item">@item.CodEmpresaNavigation.NombreEmpresa</p></td>

                        </tr>

                    }
                }
            </tbody>
        </table>
        <br />

        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth">#</th>
                    <th class="tbth">Fecha Aumento</th>
                    <th class="tbth">Saldo Antrior</th>
                    <th class="tbth">Nuevo Saldo</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int? contador1 = 0;
                }
                @{
                    foreach (var item in Model.HistorialIncrementos)
                    {
                        contador1++;
                        <tr>
                            <td class="td-item"><p class="item">@contador1</p></td>
                            <td class="td-item"><p class="item">@item.FechaAumento</p></td>
                            <td class="td-item"><p class="item">@item.SaldoAnterior</p></td>
                            <td class="td-item"><p class="item">@item.NuevoSaldo</p></td>

                        </tr>

                    }
                }
            </tbody>
        </table>
        <br />
        <p style="text-align:center;" class="text">************************************************************Última Linea************************************************************</p>
    </div>

</body>
</html>